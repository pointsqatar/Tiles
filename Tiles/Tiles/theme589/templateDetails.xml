	<config><!-- no need to change -->
		<fields name="params">
			<fieldset name="basic">
				<field name="logo" type="media"
					   label="TPL_VMTHEME_FIELD_LOGO_LABEL" description="TPL_VMTHEME_FIELD_LOGO_DESC" />
			<!-- <field name="logo2" type="media"
					   label="Footer Logo" description="TPL_VMTHEME_FIELD_LOGO_DESC" />  -->

				<field name="sitetitle"  type="text" default=""
					label="TPL_VMTHEME_FIELD_SITETITLE_LABEL"
					description="TPL_VMTHEME_FIELD_SITETITLE_DESC"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="TPL_VMTHEME_FIELD_DESCRIPTION_LABEL"
					description="TPL_VMTHEME_FIELD_DESCRIPTION_DESC"
					filter="string" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="home_animate" type="radio" default="1"
					label="Home Animation"
					description="">
						<option value="1">TPL_VMTHEME_ENABLE</option>
						<option value="0">TPL_VMTHEME_DISABLE</option>
				</field>
				<field name="home_tabs" type="radio" default="1"
					label="TPL_VMTHEME_FIELD_HOME_TABS_LABEL"
					description="TPL_VMTHEME_FIELD_HOME_TABS_DESC">
						<option value="1">TPL_VMTHEME_ENABLE</option>
						<option value="0">TPL_VMTHEME_DISABLE</option>
				</field>
			</fieldset>
		</fields>
	</config>
	
